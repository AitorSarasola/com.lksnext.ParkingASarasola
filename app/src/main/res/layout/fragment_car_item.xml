<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_frame">

    <!-- Fila con matrícula + imagen a la derecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/txtMatricula"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="MOTO\n0000ABC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/carTypeImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/item_frame_small"
            android:contentDescription="Tipo de vehículo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_car"
            android:padding="2dp"
            android:layout_marginStart="15dp"/>

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="Primera Propiedad"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_disabled_vehicle"
            android:layout_marginStart="9dp"/>

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="SegundaPropiedad"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_electric"
            android:layout_marginStart="9dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtDiscapacitados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="18dp"
        android:text="Para Discapacitados: No"/>

    <TextView
        android:id="@+id/txtElectrico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="18dp"
        android:text="Eléctrico: Sí"/>

    <TextView
        android:id="@+id/txtEtiqueta"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Etiqueta Medioambiental:\nCero Emisiones"/>

    <Button
        android:id="@+id/btnBorrar"
        android:layout_marginTop="2dp"
        android:text="Borrar"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_frame_red"
        android:backgroundTint="@android:color/transparent" />
</LinearLayout>