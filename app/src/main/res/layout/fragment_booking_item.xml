<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="22dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_frame">

    <!-- Fila con matrícula + imagen a la derecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/txtTitulo"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:textSize="23dp"
            android:text="RESERVA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/carTypeImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/item_frame_small"
            android:contentDescription="Plaza Para Motos"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_car"
            android:padding="2dp"
            android:layout_marginStart="15dp"/>

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:contentDescription="Primera Propiedad"
            android:scaleType="fitEnd"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_disabled_vehicle"
            android:layout_marginStart="9dp"/>

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="SegundaPropiedad"
            android:scaleType="fitEnd"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_electric"
            android:layout_marginStart="9dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtIdType"
        android:textStyle="bold"
        android:layout_marginTop="-2dp"
        android:textSize="17dp"
        android:text="PLAZA Nº 001 - PARA COCHE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtMatricula"
        android:textStyle="bold"
        android:layout_marginTop="-2dp"
        android:textSize="17dp"
        android:text="COCHE: NNNN-LLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/firstLine"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_height="3dp"
        android:background="@color/orange"
        />

    <TextView
        android:id="@+id/txtFecha"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:textSize="17dp"
        android:text="DD de Septiembre de YYYY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtHoras"
        android:textStyle="bold"
        android:layout_marginTop="-2dp"
        android:textSize="17dp"
        android:text="HH:MM - HH:MM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtDiscapacitados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="17dp"
        android:text="• Habilitada Para Discapacitados"/>

    <TextView
        android:id="@+id/txtElectrico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="17dp"
        android:text="• Con Cargador Eléctrico"/>

    <TextView
        android:id="@+id/txtEtiqueta"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="• Etiqueta Medioambiental Máxima:\n  Cero Emisiones"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCancelarReserva"
            android:layout_marginTop="2dp"
            android:text="Cancelar Reserva"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/item_frame_red"
            android:backgroundTint="@android:color/transparent" />

        <ImageButton
            android:id="@+id/btnAdd15Min"
            android:layout_width="47dp"
            android:layout_marginTop="2dp"
            android:layout_height="47dp"
            android:scaleType="centerInside"
            android:layout_marginRight="7dp"
            android:padding="5dp"
            android:contentDescription="Añadir 15min"
            android:src="@drawable/ic_more_time"
            android:background="@drawable/item_frame_small"
            />

        <TextView
            android:id="@+id/txtMessage"
            android:textStyle="italic"
            android:textSize="18dp"
            android:text="Reserva Cancelada"
            android:textColor="@color/red"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>