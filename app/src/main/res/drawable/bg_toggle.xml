<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado activado (checked) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange" /> <!-- naranja sólido -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Estado desactivado -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- fondo vacío -->
            <stroke android:width="3dp" android:color="@color/orange" /> <!-- borde naranja -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
